# Stock database
stockdb.uri=jdbc:derby:vss_stockdatabase.db

# Account database
accountdb.uri=jdbc:derby:vss_accountdatabase.db

# API Url
stockapi.url=https://sandbox.iexapis.com/stable/stock/market/batch?types=quote&token=Tpk_2375b638cd794fc8b05ed84f5f45036f&symbols=

# Stock API update time interval - hh:mm:ss
update.stock.interval=00:01:00

# Stock API update start time
    # hh:mm:ss for specific time
    # 'now' (without quotes) for immediately on program startup
    # 'wait-interval' (without quotes) for wait the given interval before starting
    # 'on-interval' (without quotes) for wait until the current time is on the interval
        # i.e. interval of 00:01:00 waits until the time is a whole minute (i.e. 04:05:00)

update.stock.start=on-interval

# Stock Data Web scraper update time interval - hh:mm:ss
update.stockdata.interval=24:00:00

# Stock Data Web scraper update start time - hh:mm:ss
    # hh:mm:ss for specific time
    # 'now' (without quotes) for immediately on program startup
    # 'wait-interval' (without quotes) for wait the given interval before starting
    # 'on-interval' (without quotes) for wait until the current time is on the interval
        # i.e. 00:01:00 waits until the time is a whole minute (i.e. 04:05:00)

update.stockdata.start=on-interval